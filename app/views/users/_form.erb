<%= form_with(model: @user, local: true) do |form| %>

  <% if @user.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h5><%= pluralize(@user.errors.count, "error") %> prohibited this article from being saved:</h5>
      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <div class="mb-3">
      <label for="formGroupExampleInput" class="form-label"><%= form.label :username %></label>
      <%= form.text_field :username, placeholder: "Enter your username", class: "form-control"%>
    </div>
    <div class="mb-3">
      <label for="formGroupExampleInput2" class="form-label"><%= form.label :email %></label>
      <%= form.email_field :email, placeholder: "Enter your email", class: "form-control" %>
    </div>
    <div class="mb-3">
      <label for="formGroupExampleInput2" class="form-label"><%= form.label :password %></label>
      <%= form.password_field :password, placeholder: "Enter your password", class: "form-control" %>
    </div>
    <div class="mb-3">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
      <div class="mb-3">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path %>
    </div>
<% end %>
